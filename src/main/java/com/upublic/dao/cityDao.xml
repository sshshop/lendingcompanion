<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.upublic.dao.cityMapper.xml">

    <resultMap type="city" id="cityResultMap">
        <id column="cid" property="cid"/>
        <result column="cname" property="cname"/>

        <association property="province" javaType="province" >
            <id column="pid" property="pid"/>
            <result column="pname" property="pname"/>
        </association>
    </resultMap>

    <select id="getCity" parameterType="Long"
            resultType="com.upublic.vo.City">
        select * from City where cid=#{cid}
    </select>

</mapper>
